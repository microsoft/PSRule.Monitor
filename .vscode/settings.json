{
    "files.exclude": {
        ".vs/": true,
        "out/": true,
        "reports/": true,
        "**/bin/": true,
        "**/obj/": true,
        "TestResults/": true
    },
    "search.exclude": {
        "out/": true
    },
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "yaml.format.singleQuote": true,
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "cSpell.words": [
        "Kusto",
        "cmdlet",
        "cmdlets",
        "hashtable"
    ],
    "files.associations": {
        "**/.azure-pipelines/**/*.yaml": "azure-pipelines"
    }
}
