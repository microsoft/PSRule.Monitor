{
    "files.exclude": {
        ".vs/": true,
        "out/": true,
        "reports/": true,
        "**/bin/": true,
        "**/obj/": true,
        "TestResults/": true
    },
    "search.exclude": {
        "out/": true
    },
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "yaml.format.singleQuote": true,
    "[xml]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "files.insertFinalNewline": true
    },
    "[markdown]": {
        "editor.tabSize": 2,
        "files.insertFinalNewline": true
    },
    "cSpell.words": [
        "Kusto",
        "cmdlet",
        "cmdlets",
        "hashtable"
    ],
    "files.associations": {
        "**/.azure-pipelines/**/*.yaml": "azure-pipelines",
        "**/NuGet.config": "xml"
    },
    "git.branchProtection": [
        "main",
        "release/*"
    ]
}
